#!/usr/bin/env php
<?php

use CodingPaws\PSpec\Executor;

if (php_sapi_name() !== 'cli') {
  echo "â›” phptest can only run in your CLI." . PHP_EOL;
  exit(1);
}

$file = $argv[1] ?? '.';

require(__DIR__.'/../../vendor/autoload.php');

$entrypoint = new Executor($file);
$entrypoint->registerMatchers();
$entrypoint->execute();
